<h1>Species</h1>

<ul>
  <% @allspecies.each do |species| %>
  <li><a href="/species/<%= species.id %>"><%= species.name %></a></li>
  <% end %>
</ul>


<h2>Enter new species</h2>
<% if @species.errors.any? %>
<h3>Please fix these errors:</h3>
<ul>
<% @species.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>

<form action="/species" method="post">
  <label for="species_name">Name</label>
  <input id="species_name" name="name" type="text" value="<%= @species.name %>">
<button>Create species</button>
</form>

